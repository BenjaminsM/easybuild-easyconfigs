easyblock = "PythonPackage"

name = 'multiqc'
version = '1.6'
versionsuffix = '-Python-%(pyver)s'

homepage = 'http://multiqc.info/'
description = """Create aggregate bioinformatics analysis reports across many samples and tools."""

toolchain = {'name': 'foss', 'version': '2015b'}

source_urls = ['https://github.com/ewels/MultiQC/archive/v1.6']
sources = ['%(name)s-%(version)s.tar.gz']
checksums = [
    '438284619244756e21ec54eab927c620' 
]

dependencies = [
    ('libyaml', '0.1.6'),
    ('libpng', '1.6.29'),
    ('freetype', '2.8'),
    ('cairo', '1.14.6'),
    ('Python', '2.7.11'),
]

binaries = ['futurize', 'multiqc', 'pasteurize']
sanity_check_paths = {
    'files': ['bin/%s' % x for x in binaries],
    'dirs':  ['bin', 'lib/python%(pyshortver)s/site-packages'],
}

moduleclass = 'bio'
modextrapaths = {'PYTHONPATH': ['lib/python%(pyshortver)s/site-packages']}
