easyblock = 'ConfigureMake'

name = 'FastQTL'
version = '2.184'

homepage = 'http://fastqtl.sourceforge.net/'
description = """Fast and efficient QTL mapper for molecular phenotypes."""

source_urls = ['http://fastqtl.sourceforge.net/files/']
sources = ['%(name)s-%(version)s.linux.tgz']
checksums = ['98a9ba48e82a62956fc27a58d040d7bf']

toolchain = {'name': 'foss', 'version': '2015b'}

dependencies = [
    ('GSL', '2.3'),
    ('Boost', '1.60.0', '-Python-2.7.11'),
    ('zlib', '1.2.8'),
    ('Rmath', '3.3.3'),
]


#installopts = "PREFIX=%(installdir)s libdir='${prefix}/lib'"

sanity_check_paths = {
    'files': ['bin/fastqtl', 'bin/faal',
              'lib/fastqtl.so', 'lib/fastqtl.a'],
    'dirs': ['share/man', 'include']
}

moduleclass = 'tools'