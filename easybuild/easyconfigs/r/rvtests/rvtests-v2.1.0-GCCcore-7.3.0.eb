easyblock = 'MakeCp'

name = 'rvtests'
version = 'v2.1.0'

homepage = 'https://github.com/zhanxw/rvtests'
description = """Rare Variant tests, a package for genetic association analysis for sequence datasets."""

toolchain = {'name': 'GCCcore', 'version': '7.3.0'}

source_urls = []
sources = []

sources = [{
    'source_urls': ['https://github.com/zhanxw/%(name)s/archive/'],
    'download_filename': '%(version)s.tar.gz',
    'filename': '%(name)s-%(version)s.tar.gz',
}]
patches = ['%(name)s-%(version)s.patch']
checksums = [
    'bc05cd1ab1cbeda62bd79fd3ba0f46b8e304a1bc1bea556316baa2c38ef1fcf3', #  rvtests-v2.1.0.tar.gz
    'c6cf61f98cdf8973bbbd2c775e8307c7733128a6bb5ebe9f37a7454fa3de63c7', #  rvtests-v2.1.0.patch
]

builddependencies = [
    ('binutils', '2.30')
]

parallel = 1

files_to_copy = [(['executables/*'], 'bin'), 'examples']

sanity_check_paths = {
    'files': ['bin/rvtests'],
    'dirs': ['bin', 'examples']
}

moduleclass = 'bio'
