easyblock = 'PackedBinary'

name = 'phASER'
version = 'c067827'

homepage = "https://github.com/secastel/phaser/"
description = """Detection of Regulatory DNA Sequences using GRO-seq Data.
"""

#
# Don't use 'dummy' as toolchain version to make sure
# dependencies are loaded both at build as well as at runtime.
# With 'dummy' as toolchain version,
# dependencies will only be loaded at runtime.
#
#toolchain = {'name': 'dummy', 'version': 'dummy'}
toolchain = {'name': 'dummy', 'version': ''}

source_urls = ['https://github.com/secastel/phaser/archive']
sources = ['%s.zip' %version]
checksums = ['37d76c508a4f81b315edc0740a5f54b3']

dependencies = [
    ('SAMtools', '1.2', '', ('foss', '2015b')),
    ('BEDTools', '2.23.0', '', ('foss', '2015b')),
    ('PyVCF', '0.6.7', '-Python-2.7.9', ('foss', '2015b')),
    ('Cython', '0.22', '-Python-2.7.9', ('foss', '2015b')),
    ('numpy', '1.9.2', '-Python-2.7.9', ('foss', '2015b')),
    ('scipy', '0.15.1', '-Python-2.7.9', ('foss', '2015b')),
    ('tabix', '0.2.6', '', ('foss', '2015b')),
]

postinstallcmds = ['chmod 775 %(installdir)s/phaser/phaser.py; cd %(installdir)s/phaser/; module load Cython/0.22-foss-2015b-Python-2.7.9; python setup.py build_ext --inplace']

sanity_check_paths = {
    'files': ['phaser/phaser.py'],
    'dirs': []
}


moduleclass = 'bio'
